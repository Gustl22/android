<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryDark">@color/green_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="actionBarStyle">@style/MyActionBar.WithIndicator</item>
    </style>

    <style name="AppTheme.NoIndicator">
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="AppTheme.TransparentActionBar">
        <item name="actionBarStyle">@style/MyActionBar.WithIndicator.Transparent</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="elevation">0dp</item>
    </style>

    <style name="MyActionBar.WithIndicator" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">showHome|homeAsUp|showTitle</item>
    </style>

    <style name="MyActionBar.WithIndicator.Transparent">
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="TextAppearance.TwoLineListItem" parent="TextAppearance.AppCompat.Caption"/>
    <style name="TextAppearance.TwoLineListItem.PrimaryText">
        <item name="android:textSize">@dimen/text_size_primary</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    <style name="TextAppearance.TwoLineListItem.SecondaryText">
        <item name="android:textSize">@dimen/text_size_secondary</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

</resources>
