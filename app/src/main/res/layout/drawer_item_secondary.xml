<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_item_height"
    android:paddingRight="@dimen/drawer_section_horizontal_padding"
    android:background="@drawable/background_drawer_item">

    <TextView
        android:id="@+id/drawer_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/drawer_section_horizontal_padding"
        android:layout_centerVertical="true"
        android:textColor="@color/drawer_item_text"
        android:textSize="@dimen/drawer_item_text_size"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

</RelativeLayout>
